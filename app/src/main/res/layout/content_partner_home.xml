        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales Record"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph_view"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:padding="16dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="#EEEEEE"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                   >
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        >
                        <!--android:orienation="vertical"-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:id="@+id/img_current_orders_partner_dashboard"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/current_order"
                                android:layout_centerInParent="true"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Orders"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:layout_below="@+id/img_current_orders_partner_dashboard"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                />

                            <Button
                                android:id="@+id/btn_current_order_partner_dashboard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <!--android:orienation="vertical"-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img_products_partner_dashboard"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/icon_products_dashboard"
                                android:layout_centerInParent="true"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Products"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:layout_below="@+id/img_products_partner_dashboard"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                />

                            <Button
                                android:id="@+id/btn_products_partner_dashboard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        >
                        <!--android:orienation="vertical"-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img_earning_partner_dashboard"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/earnings"
                                android:layout_centerInParent="true"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Earnings"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:layout_below="@+id/img_earning_partner_dashboard"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                />

                            <Button
                                android:id="@+id/btn_earning_partner_dashboard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <!--android:orienation="vertical"-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img_add_new_product_partner_dashboard"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/add_new_item"
                                android:layout_centerInParent="true"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add new product"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:layout_below="@+id/img_add_new_product_partner_dashboard"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                />

                            <Button
                                android:id="@+id/btn__add_new_product_partner_dashboard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

  <!--  </FrameLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>